{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "./gql/",
      "./styled-system/"
    ]
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "./gql/",
      "./styled-system/"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "./gql/",
      "./styled-system/",
      "./src/components/ui/*.tsx"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "semicolons": "asNeeded"
    }
  }
}
